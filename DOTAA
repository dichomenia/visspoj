#include <stdio.h>
#include <queue>
 
using namespace std;
 
int main()
{
	int tc;
	scanf("%d", &tc);
	
	for(int z = 1; z <= tc; z++)
	{
		priority_queue <int> pq;
		int n, m, dmg;
		scanf("%d %d %d", &n, &m, &dmg);
		
		for(int y = 1; y <= n; y++)
		{
			int hp;
			scanf("%d", &hp);
			pq.push(hp);
		}
		
		for(int x = 1; x <= m; x++)
		{
			int fr = pq.top();
			if(fr <= dmg)
			{
				printf("NO\n");
				break;
			}
			else if(fr > dmg && x == m)
			{
				printf("YES\n");
			}
			fr = fr - dmg;
			pq.pop();
			pq.push(fr);
		}
	}
} 
