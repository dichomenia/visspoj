#include <stdio.h>
#include <stdlib.h>
#include <algorithm>
 
using namespace std;
 
int main()
{
	int tc;
	scanf("%d", &tc);
	
	for(int z = 1; z <= tc; z++)
	{
		int row, col = 3;
		scanf("%d", &row);
		
		int arr[row+5][col+5];
		
		for(int r = 1; r <= row; r++)
		{
			for(int c = 1; c <= col; c++)
			{
				scanf("%d", &arr[r][c]);
			}
		}		
		
		int memo[row+5][col+5];
		for(int r = 1; r <= row; r++)
			for(int c = 1; c <= col; c++)
				memo[r][c] = 1000000000;
		
		for(int c = 1; c <= col; c++)
			memo[1][c] = arr[1][c];
	
		for(int r = 1; r < row; r++)
		{
			
			for(int c = 1; c <= col; c++)
			{
				if(c == col)
				{
					memo[r+1][c-2] = min(memo[r+1][c-2], memo[r][c] + arr[r+1][c-2]);
					memo[r+1][c-1] = min(memo[r+1][c-1], memo[r][c] + arr[r+1][c-1]);
				}
				
				else if(c == 1)
				{
					memo[r+1][c+1] = min(memo[r+1][c+1], memo[r][c] + arr[r+1][c+1]);
					memo[r+1][c+2] = min(memo[r+1][c+2], memo[r][c] + arr[r+1][c+2]);
				}
				
				else
				{
					memo[r+1][c-1] = min(memo[r+1][c-1], memo[r][c] + arr[r+1][c-1]);
					memo[r+1][c+1] = min(memo[r+1][c+1], memo[r][c] + arr[r+1][c+1]);
				}
			}
		}
			
		int minim = 1000000000;
		for(int c = 1; c <= col; c++)
			minim = min(minim, memo[row][c]);
		
		printf("%d\n", minim);
	} // end tc
} 
